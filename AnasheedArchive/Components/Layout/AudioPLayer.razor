<div id="audioPlayerControls" class="z-0 position-absolute invisible">

    <div class="mb-2">
        <input type="range" id="progress-bar" min="0" max="" value="0" />
    </div>

    <div class="d-flex flex-row align-items-center justify-content-evenly">
        <button class="btn" id="play-pause-button">
            <svg class="btn-icons" id="play-pause-button-icon">
                <use href="#play-fill"></use>
            </svg>
        </button>

        <div style="display: inline-flex;" class="align-items-center volume-control">
            <button class="btn" id="volume-button">
                <svg class="btn-icons" id="volume-button-icon">
                    <use href="#volume-semi-up-fill"></use>
                </svg>
            </button>
            <input type="range" id="volume-bar" min="0" max="1" step="0.01">
        </div>

        <div class="d-flex flex-row">
            <div id="current-time">0:00</div>
            <div>/</div>
            <div id="total-time">0:00</div>
        </div>
    </div>

</div>

